@page
@model RegisterModel
@{
    ViewData["Title"] = "Register";
}

<div class="container" style="margin:50px; ">
    <main role="main" class="pb-3">
        <div class="row">
            <div class="col-md-1"></div>
            <div class="col-md-10 ">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <label class="text-dark">First Name : </label>
            <div class="form-floating col-6">
                <input asp-for="Input.FirstName" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.FirstName" class="text-danger"></span>
            </div> 
            <label class="text-dark">Last Name : </label>
            <div class="form-floating col-6">
                <input asp-for="Input.LastName" class="form-control" autocomplete="username" aria-required="true" />                
                <span asp-validation-for="Input.LastName" class="text-danger"></span>
            </div>  
            <label class="text-dark">Username : </label>
            <div class="form-floating col-6">
                <input asp-for="Input.UserName" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.UserName" class="text-danger"></span>
            </div>            
            <label class="text-dark">Email : </label>
            <div class="form-floating col-6">
                <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <label class="text-dark">Password : </label>
            <div class="form-floating col-6">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <label class="text-dark">Confirm Password : </label>
            <div class="form-floating col-6">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <br />
            <div class="col-6">
                        <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color:#0f2133">Register</button>
            </div>
            
        </form>
            </div>
            <div class="col-md-1"></div>
        </div>
    </main>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
