@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager
@{
    var pathString = Context.Request.Path;
    string[] words = pathString.ToString().Split('/');
    var activePage = words[1];
    var isActive = "";
}
<!DOCTYPE html>
<html lang="en" class="no-js">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - MovieDb</title>
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/boxicons@latest/css/boxicons.min.css" />
	<!--Google Font-->
	<link rel="stylesheet" href='css?family=Dosis:400,700,500|Nunito:300,400,600'>
	<!-- Mobile specific meta -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
	<meta name="format-detection" content="telephone-no">

	<!-- CSS files -->
	<link rel="stylesheet" href="~/css/admin.css">
</head>
<body id="body-pd">
    <header class="header" id="header">
        <div class="header_toggle"> <i class='bx bx-menu' id="header-toggle"></i> </div>
        <li>
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
    </header>
    <div class="l-navbar" id="nav-bar">
        <nav class="nav">
            <div>
                <a href="#" class="nav_logo"> <i class='bx bx-layer nav_logo-icon'></i> <span class="nav_logo-name">BBBootstrap</span> </a>
                <div class="nav_list">
                    <a href="#" class="nav_link @(activePage=="DashBoard" ? "active" : "")"> <i class='bx bx-grid-alt nav_icon'></i> <span class="nav_name">Dashboard</span>  </a>
                    <a href="/UserRoles/Index" class="nav_link @(activePage=="UserRoles" ? "active" : "") @(activePage=="RoleManager" ? "active" : "")"> <i class='bx bx-user nav_icon'></i> <span class="nav_name">Users</span> </a>
                    <a href="/EditorMovie/Index" class="nav_link @(activePage=="Messages" ? "active" : "")"> <i class='bx bx-message-square-detail nav_icon'></i> <span class="nav_name">Movies</span> </a>
                    <a href="/EditorActor/Index" class="nav_link @(activePage=="Bookmark" ? "active" : "")"> <i class='bx bx-bookmark nav_icon'></i> <span class="nav_name">Actors</span> </a>
                    <a href="#" class="nav_link @(activePage=="Bookmark" ? "active" : "")" > <i class='bx bx-folder nav_icon'></i> <span class="nav_name">Files</span> </a>
                    <a href="#" class="nav_link @(activePage=="Bookmark" ? "active" : "")" > <i class='bx bx-bar-chart-alt-2 nav_icon'></i> <span class="nav_name">Stats</span> </a>
                </div>
            </div>
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="nav_link btn btn-outline-primary" style="border:none;background-color: transparent;">
                    <i class='bx bx-log-out nav_icon'></i> <span class="nav_name">LOGOUT</span>
                </button>
            </form>
        </nav>
    </div>
    <!--Container Main start-->
    <div class="height-100 bg-light">
        @RenderBody()
    </div>
    <!--Container Main end-->
</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/admin.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
@await RenderSectionAsync("Scripts", required: false)
</html>