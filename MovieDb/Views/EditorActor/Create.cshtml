@model MovieDb.Data.ViewModels.ActorViewModel

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Create</h1>

<h4>ActorDao</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="EditorActor" asp-action="Create" method="post" enctype="multipart/form-data">
            <input asp-for="actor.Movies" type="hidden" value="."/>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>            
            <div class="form-group" style="margin:20px;">
                <label asp-for="actor.FullName" class="control-label"></label>
                <input asp-for="actor.FullName" class="form-control" />
                <span asp-validation-for="actor.FullName" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:20px;">
                <label asp-for="actor.Banner" class="control-label"></label>
                <input type="file" class="form-control-file" id="bannerFileInput" name="bannerFileInput">
                <span asp-validation-for="actor.Banner" class="text-danger"></span>
            </div>            
            <div class="form-group" style="margin:20px;">
                <label asp-for="actor.Thumbnail" class="control-label"></label>
                <input type="file" class="form-control-file" id="thumbnailFileInput" name="thumbnailFileInput">
                <span asp-validation-for="actor.Thumbnail" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:20px;">
                <label asp-for="actor.PlotKeywords" class="control-label"></label>
                <input asp-for="actor.PlotKeywords" class="form-control" />
                <span asp-validation-for="actor.PlotKeywords" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:20px;">
                <label asp-for="actor.DateOfBirth" class="control-label"></label>
                <input asp-for="actor.DateOfBirth" class="form-control" />
                <span asp-validation-for="actor.DateOfBirth" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:20px;">
                <label asp-for="actor.Country" class="control-label"></label>
                <input asp-for="actor.Country" class="form-control" />
                <span asp-validation-for="actor.Country" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:20px;">
                <label asp-for="actor.Height" class="control-label"></label>
                <input asp-for="actor.Height" class="form-control" />
                <span asp-validation-for="actor.Height" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Movies" class="control-label"></label>
                <select asp-for="Movies" class="form-control" asp-items="ViewBag.Movies" multiple></select>
                <span asp-validation-for="Movies" class="text-danger"></span>
            </div>
            <div class="form-group" style="margin:20px;">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-primary" style="margin-left:20px;">Back to List</a>
            </div>
        </form>
    </div>
</div>

